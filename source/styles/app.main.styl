// -- Reset --------------------------------------------------------------------
a
  text-decoration none

h1,h2,h3,h4,h5,h6,ul,ol,li,p,nav,header,section,article,main,footer,aside,figure
  margin 0
  padding 0

// -- Main ---------------------------------------------------------------------
body
  margin 0
  padding 0
  font-family 'Lato'
  font-size 16px

.container
  display flex
  flex-direction row
  justify-content center
  align-content flex-start

.videos
  order 1
  flex-grow 0
  display flex
  flex-direction column
  justify-content flex-start

  video
    height 50vh
    margin 0
    padding 0

  [data-video='remote']
    order 1
  [data-video='local']
    order 2

.blackboard
  order 3
  flex-grow 3
  background-color blue
